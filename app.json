{
  "expo": {
    "name": "photo-mission-app",
    "slug": "photo-mission-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "photomissionapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Photo Mission App to use your location to find missions near you."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Photo Mission App to access your camera to take photos for missions."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Photo Mission App to save photos to your library.",
          "savePhotosPermission": "Allow Photo Mission App to save photos to your library."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}